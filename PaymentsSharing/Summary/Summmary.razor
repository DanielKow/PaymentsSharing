@page "/"
@using PaymentsSharing.Time
@inject SummaryViewModel ViewModel

<MudStack Spacing="3">
    <MudText Typo="Typo.h2">Budget @MonthAndYear.Now</MudText>
    <MudDivider/>
    <MudText Typo="Typo.h3">Spent @ViewModel.Amount and @ViewModel.AmountForMeat for meat</MudText>
    <MudDivider/>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" Href="/AddPayment">Add new payment</MudButton>
    <MudDivider/>
    <PaymentsChart/>
</MudStack>