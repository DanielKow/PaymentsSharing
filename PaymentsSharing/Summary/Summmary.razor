@page "/"
@using PaymentsSharing.Time
@inject SummaryViewModel ViewModel

<MudStack Spacing="3">
    <MudText Typo="Typo.h1">Budget @MonthAndYear.Now</MudText>
    
    <MudText Typo="Typo.h2">Spent @ViewModel.Amount and @ViewModel.AmountForMeat for meat in total</MudText>
    
    <MudStack Spacing="2">
        @foreach(string amountPerPerson in ViewModel.AmountsPerPerson())
        {
            <MudText Typo="Typo.h3">@amountPerPerson</MudText>
        }
    </MudStack>
</MudStack>

