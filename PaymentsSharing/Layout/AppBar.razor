<MudStack Row="true" Class="w-100">
    <MudIconButton Icon="@DrawerIcon" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer"/>
    <MudSpacer/>
    <SignedInPerson/>
</MudStack>

@code {
    [Parameter] public bool DrawerOpen { get; set; }

    [Parameter] public EventCallback<bool> DrawerOpenChanged { get; set; }

    string DrawerIcon => DrawerOpen ? Icons.Material.Filled.Close : Icons.Material.Filled.Menu;

    void ToggleDrawer()
    {
        DrawerOpen = !DrawerOpen;
        DrawerOpenChanged.InvokeAsync(DrawerOpen);
    }

}