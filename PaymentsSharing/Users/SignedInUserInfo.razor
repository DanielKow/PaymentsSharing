@inject SignedInUserInfoViewModel ViewModel

@if (_isSignedIn)
{
    <MudStack Row="true">
        <MudText>Hello, test</MudText>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Logout" OnClick="@ViewModel.SignIn">
            Sign Out
        </MudButton>
    </MudStack>
}
else
{
    <MudButton Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Login" OnClick="@ViewModel.SignOut">
        Sign In
    </MudButton>
}

@code 
{
    private readonly bool _isSignedIn = false;
}